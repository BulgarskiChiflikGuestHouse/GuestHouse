                                <a href="service.html" class="nav-item nav-link">Menu</a>*@
                                <a asp-controller="Rooms" asp-action="GetAllRooms" class="nav-item nav-link">Rooms</a>
                                @*<a href="gallery.html" class="nav-item nav-link">Gallery</a>
                                <a href="contact.html" class="nav-item nav-link">Contact</a> *@
                            </div>
                            <a href="login.html" class="btn btn-primary rounded-0 py-4 px-md-5 d-none d-lg-block">Login<i class="fa fa-arrow-right ms-3"></i></a>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container-fluid bg-dark text-light footer wow fadeIn" data-wow-delay="0.1s" style="padding-top: 100px; margin-top: 0px; margin-bottom: -30px">
        <div class="container pb-5">
            <div class="row g-5">
                <div class="col-md-6 col-lg-4">
                    <div class="bg-primary rounded p-4">
                        <a href="index.html"><h1 class="text-white text-uppercase mb-3">Bulgarski Chiflik</h1></a>
                        <p class="text-white mb-0">
